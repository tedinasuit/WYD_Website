{"ast":null,"code":"import { reactive, computed } from 'vue';\nimport { useStore } from 'vuex'; // Import useStore hook\nimport SloganText from '@/components/SloganText.vue'; // Import the SloganText component\n\nexport default {\n  name: 'HomeScreen',\n  components: {\n    SloganText: SloganText // Register the SloganText component\n  },\n  setup: function setup() {\n    // Reactive state\n    var state = reactive({\n      isLogoSmall: false\n    });\n\n    // Vuex store\n    var store = useStore();\n\n    // Method to toggle the logo size\n    var toggleLogoSize = function toggleLogoSize() {\n      state.isLogoSmall = !state.isLogoSmall;\n      var newBackgroundImage = state.isLogoSmall ? '@/assets/Hippie-achtergrond-2.png' : '@/assets/Hippie-kleurrijk.png';\n      // Dispatch action to change background image\n      store.dispatch('changeBackgroundImage', newBackgroundImage);\n    };\n\n    // Computed property for logo style\n    var logoStyle = computed(function () {\n      return {\n        maxWidth: state.isLogoSmall ? '160px' : '100%',\n        transition: 'max-width 0.5s ease-in-out' // Add transition for smooth resizing\n      };\n    });\n\n    // Computed property for container style\n    var containerStyle = computed(function () {\n      return {\n        textAlign: 'center',\n        position: 'absolute',\n        top: state.isLogoSmall ? '10px' : '50%',\n        left: '50%',\n        transform: state.isLogoSmall ? 'translate(-50%, 0)' : 'translate(-50%, -50%)',\n        transition: 'top 0.5s ease-in-out, transform 0.5s ease-in-out' // Add transition for smooth repositioning\n      };\n    });\n\n    // Return data, methods, and computed properties accessible in the template\n    return {\n      state: state,\n      toggleLogoSize: toggleLogoSize,\n      logoStyle: logoStyle,\n      containerStyle: containerStyle\n    };\n  }\n};","map":{"version":3,"names":["reactive","computed","useStore","SloganText","name","components","setup","state","isLogoSmall","store","toggleLogoSize","newBackgroundImage","dispatch","logoStyle","maxWidth","transition","containerStyle","textAlign","position","top","left","transform"],"sources":["/Users/larshoeijmans/Documents/GitHub/WYD_Website/src/components/HomeScreen.vue"],"sourcesContent":["<template>\n  <div class=\"container\" :style=\"containerStyle\">\n    <img class=\"image\" src=\"@/assets/WhatYouDesign-TransWit.png\" :style=\"logoStyle\" alt=\"WYDLogo\" @click=\"toggleLogoSize\">\n    <SloganText v-if=\"!state.isLogoSmall\" /> <!-- Render SloganText only if isLogoSmall is false -->\n  </div>\n</template>\n\n<script>\nimport { reactive, computed } from 'vue';\nimport { useStore } from 'vuex'; // Import useStore hook\nimport SloganText from '@/components/SloganText.vue'; // Import the SloganText component\n\nexport default {\n  name: 'HomeScreen',\n  components: {\n    SloganText // Register the SloganText component\n  },\n  setup() {\n    // Reactive state\n    const state = reactive({\n      isLogoSmall: false,\n    });\n\n    // Vuex store\n    const store = useStore();\n\n    // Method to toggle the logo size\n    const toggleLogoSize = () => {\n      state.isLogoSmall = !state.isLogoSmall;\n      const newBackgroundImage = state.isLogoSmall ? '@/assets/Hippie-achtergrond-2.png' : '@/assets/Hippie-kleurrijk.png';\n      // Dispatch action to change background image\n      store.dispatch('changeBackgroundImage', newBackgroundImage);\n    };\n\n    // Computed property for logo style\n    const logoStyle = computed(() => ({\n      maxWidth: state.isLogoSmall ? '160px' : '100%',\n      transition: 'max-width 0.5s ease-in-out' // Add transition for smooth resizing\n    }));\n\n    // Computed property for container style\n    const containerStyle = computed(() => ({\n      textAlign: 'center',\n      position: 'absolute',\n      top: state.isLogoSmall ? '10px' : '50%',\n      left: '50%',\n      transform: state.isLogoSmall ? 'translate(-50%, 0)' : 'translate(-50%, -50%)',\n      transition: 'top 0.5s ease-in-out, transform 0.5s ease-in-out' // Add transition for smooth repositioning\n    }));\n\n    // Return data, methods, and computed properties accessible in the template\n    return {\n      state,\n      toggleLogoSize,\n      logoStyle,\n      containerStyle\n    };\n  }\n};\n</script>\n\n<style scoped>\n.container {\n  text-align: center;\n  position: absolute;\n  top: 50%;\n  left: 50%;\n  transform: translate(-50%, -50%);\n}\n\n.image {\n  max-width: 100%;\n  height: auto;\n  cursor: pointer; /* Change cursor to pointer when hovering over the image */\n}\n\n.slogan {\n  font-family: \"League Spartan\", sans-serif;\n  font-weight: 900;\n  font-style: normal;\n  font-size: 10vh; /* Adjust the font size as needed */\n  color: white; /* Change the color of the slogan */\n  margin-top: 9vh; /* Add some space between the image and the slogan */\n}\n</style>\n"],"mappings":"AAQA,SAASA,QAAQ,EAAEC,QAAO,QAAS,KAAK;AACxC,SAASC,QAAO,QAAS,MAAM,EAAE;AACjC,OAAOC,UAAS,MAAO,6BAA6B,EAAE;;AAEtD,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,UAAU,EAAE;IACVF,UAAS,EAATA,UAAS,CAAE;EACb,CAAC;EACDG,KAAK,WAAAA,MAAA,EAAG;IACN;IACA,IAAMC,KAAI,GAAIP,QAAQ,CAAC;MACrBQ,WAAW,EAAE;IACf,CAAC,CAAC;;IAEF;IACA,IAAMC,KAAI,GAAIP,QAAQ,CAAC,CAAC;;IAExB;IACA,IAAMQ,cAAa,GAAI,SAAjBA,cAAaA,CAAA,EAAU;MAC3BH,KAAK,CAACC,WAAU,GAAI,CAACD,KAAK,CAACC,WAAW;MACtC,IAAMG,kBAAiB,GAAIJ,KAAK,CAACC,WAAU,GAAI,mCAAkC,GAAI,+BAA+B;MACpH;MACAC,KAAK,CAACG,QAAQ,CAAC,uBAAuB,EAAED,kBAAkB,CAAC;IAC7D,CAAC;;IAED;IACA,IAAME,SAAQ,GAAIZ,QAAQ,CAAC;MAAA,OAAO;QAChCa,QAAQ,EAAEP,KAAK,CAACC,WAAU,GAAI,OAAM,GAAI,MAAM;QAC9CO,UAAU,EAAE,4BAA2B,CAAE;MAC3C,CAAC;IAAA,CAAC,CAAC;;IAEH;IACA,IAAMC,cAAa,GAAIf,QAAQ,CAAC;MAAA,OAAO;QACrCgB,SAAS,EAAE,QAAQ;QACnBC,QAAQ,EAAE,UAAU;QACpBC,GAAG,EAAEZ,KAAK,CAACC,WAAU,GAAI,MAAK,GAAI,KAAK;QACvCY,IAAI,EAAE,KAAK;QACXC,SAAS,EAAEd,KAAK,CAACC,WAAU,GAAI,oBAAmB,GAAI,uBAAuB;QAC7EO,UAAU,EAAE,kDAAiD,CAAE;MACjE,CAAC;IAAA,CAAC,CAAC;;IAEH;IACA,OAAO;MACLR,KAAK,EAALA,KAAK;MACLG,cAAc,EAAdA,cAAc;MACdG,SAAS,EAATA,SAAS;M