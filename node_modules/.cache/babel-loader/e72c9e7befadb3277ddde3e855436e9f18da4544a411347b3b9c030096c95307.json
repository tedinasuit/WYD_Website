{"ast":null,"code":"import { reactive, computed } from 'vue';\nimport SloganText from '@/components/SloganText.vue'; // Import the SloganText component\n\nexport default {\n  name: 'HomeScreen',\n  components: {\n    SloganText: SloganText // Register the SloganText component\n  },\n  setup: function setup() {\n    // Reactive state\n    var state = reactive({\n      isLogoSmall: false\n    });\n\n    // Method to toggle the logo size\n    var toggleLogoSize = function toggleLogoSize() {\n      state.isLogoSmall = !state.isLogoSmall;\n    };\n\n    // Computed property for logo style\n    var logoStyle = computed(function () {\n      return {\n        maxWidth: state.isLogoSmall ? '160px' : '100%',\n        transition: 'max-width 0.5s ease-in-out' // Add transition for smooth resizing\n      };\n    });\n\n    // Computed property for container style\n    var containerStyle = computed(function () {\n      return {\n        textAlign: 'center',\n        position: 'absolute',\n        top: state.isLogoSmall ? '10px' : '50%',\n        left: '50%',\n        transform: state.isLogoSmall ? 'translate(-50%, 0)' : 'translate(-50%, -50%)',\n        transition: 'top 0.5s ease-in-out, transform 0.5s ease-in-out' // Add transition for smooth repositioning\n      };\n    });\n\n    // Return data, methods, and computed properties accessible in the template\n    return {\n      state: state,\n      toggleLogoSize: toggleLogoSize,\n      logoStyle: logoStyle,\n      containerStyle: containerStyle\n    };\n  }\n};","map":{"version":3,"names":["reactive","computed","SloganText","name","components","setup","state","isLogoSmall","toggleLogoSize","logoStyle","maxWidth","transition","containerStyle","textAlign","position","top","left","transform"],"sources":["/Users/larshoeijmans/Documents/GitHub/WYD_Website/src/components/HomeScreen.vue"],"sourcesContent":["<template>\n  <div class=\"container\" :style=\"containerStyle\">\n    <img class=\"image\" src=\"@/assets/WhatYouDesign-TransWit.png\" :style=\"logoStyle\" alt=\"WYDLogo\">\n    <SloganText v-if=\"!state.isLogoSmall\" /> <!-- Render SloganText only if isLogoSmall is false -->\n    <button class=\"toggle-button\" @click=\"toggleLogoSize\">Toggle Logo Size</button>\n  </div>\n</template>\n\n<script>\nimport { reactive, computed } from 'vue';\nimport SloganText from '@/components/SloganText.vue'; // Import the SloganText component\n\nexport default {\nname: 'HomeScreen',\ncomponents: {\n  SloganText // Register the SloganText component\n},\nsetup() {\n  // Reactive state\n  const state = reactive({\n    isLogoSmall: false\n  });\n\n  // Method to toggle the logo size\n  const toggleLogoSize = () => {\n    state.isLogoSmall = !state.isLogoSmall;\n  };\n\n  // Computed property for logo style\n  const logoStyle = computed(() => ({\n    maxWidth: state.isLogoSmall ? '160px' : '100%',\n    transition: 'max-width 0.5s ease-in-out' // Add transition for smooth resizing\n  }));\n\n  // Computed property for container style\n  const containerStyle = computed(() => ({\n    textAlign: 'center',\n    position: 'absolute',\n    top: state.isLogoSmall ? '10px' : '50%',\n    left: '50%',\n    transform: state.isLogoSmall ? 'translate(-50%, 0)' : 'translate(-50%, -50%)',\n    transition: 'top 0.5s ease-in-out, transform 0.5s ease-in-out' // Add transition for smooth repositioning\n  }));\n\n  // Return data, methods, and computed properties accessible in the template\n  return {\n    state,\n    toggleLogoSize,\n    logoStyle,\n    containerStyle\n  };\n}\n};\n</script>\n\n<style scoped>\n.container {\ntext-align: center;\nposition: absolute;\ntop: 50%;\nleft: 50%;\ntransform: translate(-50%, -50%);\n}\n\n.image {\nmax-width: 100%;\nheight: auto;\n}\n\n.slogan {\nfont-family: \"League Spartan\", sans-serif;\nfont-weight: 900;\nfont-style: normal;\nfont-size: 10vh; /* Adjust the font size as needed */\ncolor: white; /* Change the color of the slogan */\nmargin-top: 9vh; /* Add some space between the image and the slogan */\n}\n\n.toggle-button {\nposition: fixed; /* Set button position to fixed */\nbottom: 20px; /* Adjust bottom position as needed */\nleft: 50%; /* Center button horizontally */\ntransform: translateX(-50%); /* Center button horizontally */\npadding: 10px 20px; /* Adjust padding as needed */\nfont-size: 16px; /* Adjust font size as needed */\nbackground-color: #ffffff; /* Button background color */\nborder: none; /* Remove button border */\nborder-radius: 5px; /* Apply button border radius */\ncursor: pointer; /* Set cursor to pointer on hover */\n}\n</style>"],"mappings":"AASA,SAASA,QAAQ,EAAEC,QAAO,QAAS,KAAK;AACxC,OAAOC,UAAS,MAAO,6BAA6B,EAAE;;AAEtD,eAAe;EACfC,IAAI,EAAE,YAAY;EAClBC,UAAU,EAAE;IACVF,UAAS,EAATA,UAAS,CAAE;EACb,CAAC;EACDG,KAAK,WAAAA,MAAA,EAAG;IACN;IACA,IAAMC,KAAI,GAAIN,QAAQ,CAAC;MACrBO,WAAW,EAAE;IACf,CAAC,CAAC;;IAEF;IACA,IAAMC,cAAa,GAAI,SAAjBA,cAAaA,CAAA,EAAU;MAC3BF,KAAK,CAACC,WAAU,GAAI,CAACD,KAAK,CAACC,WAAW;IACxC,CAAC;;IAED;IACA,IAAME,SAAQ,GAAIR,QAAQ,CAAC;MAAA,OAAO;QAChCS,QAAQ,EAAEJ,KAAK,CAACC,WAAU,GAAI,OAAM,GAAI,MAAM;QAC9CI,UAAU,EAAE,4BAA2B,CAAE;MAC3C,CAAC;IAAA,CAAC,CAAC;;IAEH;IACA,IAAMC,cAAa,GAAIX,QAAQ,CAAC;MAAA,OAAO;QACrCY,SAAS,EAAE,QAAQ;QACnBC,QAAQ,EAAE,UAAU;QACpBC,GAAG,EAAET,KAAK,CAACC,WAAU,GAAI,MAAK,GAAI,KAAK;QACvCS,IAAI,EAAE,KAAK;QACXC,SAAS,EAAEX,KAAK,CAACC,WAAU,GAAI,oBAAmB,GAAI,uBAAuB;QAC7EI,UAAU,EAAE,kDAAiD,CAAE;MACjE,CAAC;IAAA,CAAC,CAAC;;IAEH;IACA,OAAO;MACLL,KAAK,EAALA,KAAK;MACLE,cAAc,EAAdA,cAAc;MACdC,SAAS,EAATA,SAAS;MACTG,cAAa,EAAbA;IACF,CAAC;EACH;AACA,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}